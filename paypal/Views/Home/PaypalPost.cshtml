@model paypal.Models.PaypalViewModel
@{
    ViewBag.Title = "PayPalPost";
}

<div class="container-fluid main-container" style="margin-top: 111px;">
    <div class="row">
        <div class="col-sm-12">
            <div class="col-xs-12 col-sm-6 transaction-sec">
                <div class="content-holder">
                    <div class="content-holder-title text-center">Sending to PayPal</div>

                    <input type="hidden" name="cmd" value="_ext-enter">

                    <form id="frm" action="@ViewBag.actionURl">
                        @Html.HiddenFor(model => model.cmd)
                        @Html.HiddenFor(model => model.no_shipping)
                        @Html.HiddenFor(model => model.business)
                        @Html.HiddenFor(model => model.item_name)
                        @Html.HiddenFor(model => model.currency_code)
                        @Html.HiddenFor(model => model.amount)
                        @Html.HiddenFor(model => model.invoice)
                        @Html.HiddenFor(model => model.rm)
                        @Html.HiddenFor(model => model.notify_url)
                        @Html.HiddenFor(model => model.@return)
                        @Html.HiddenFor(model => model.cancel_return)
                        <input type="image" src="http://www.paypal.com/en_US/i/btn/x-click-but01.gif" name="submit" alt="Make payments with PayPal - it's fast, free and secure!">
                    </form>
                    <div class="text-center spinner loading">
                        <img src="https://media1.giphy.com/media/3oEjI6SIIHBdRxXI40/giphy.gif?cid=ecf05e47jpfq96basads1nbryey4jjve019k7t4wj22b9bf9&rid=giphy.gif" />
                        <p class="paypal-green-label">
                            You are redirecting to the PayPal.....
                        </p>
                        <p class="paypal-red-label">
                            PayPal can take some time, please be patient while your contract goes through.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>


